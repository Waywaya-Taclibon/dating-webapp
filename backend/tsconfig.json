{
  "compilerOptions": {
    /* ---------- File Layout ---------- */
    "rootDir": "./src",
    "outDir": "./build",

    /* ---------- Environment Settings ---------- */
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],

    /* ---------- Output Options ---------- */
    "sourceMap": false,
    "declaration": false,
    "removeComments": true,

    /* ---------- Type Checking ---------- */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* ---------- Performance ---------- */
    "skipLibCheck": true
  },

  /* ---------- Include/Exclude ---------- */
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
